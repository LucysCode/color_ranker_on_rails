<%# Reset Buttons Partial %>

<!-- Reset individual pair types -->
<div style="display: flex; justify-content: center; gap: 12px; max-width: 300px; margin: 0px auto;">
  <form method="post" action="<%= reset_ugly_colors_path %>" style="flex: 1;">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button type="submit" style="width: 100%;">Reset Ugly Colors</button>
  </form>

  <form method="post" action="<%= reset_nice_colors_path %>" style="flex: 1;">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button type="submit" style="width: 100%;">Reset Nice Colors</button>
  </form>
</div>

<!-- Reset all pairs -->
<div style="text-align: center; margin: 0px 0;">
  <form method="post" action="<%= reset_colors_path %>">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button type="submit">Reset all colors</button>
  </form>
</div>